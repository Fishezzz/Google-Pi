{
    "manifest": {
        "displayName": "ME Pie",
        "invocationName": "ME Pie",
        "category": "PRODUCTIVITY"
    },
    "actions": [
        {
            "name": "com.example.actions.MAIN",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.MAIN",
                "parameters": [
                    {
                        "name": "someValue",
                        "type": "SchemaOrg_Text"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Hello $SchemaOrg_Text:someValue",
                        "Hi $SchemaOrg_Text:someValue",
                        "Hey $SchemaOrg_Text:someValue",
                        "Okay $SchemaOrg_Text:someValue"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Hi, my name is not $SchemaOrg_Text:someValue, but what can I do for you?"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.MAIN",
                                    "params": {
                                        "someValue": "$someValue"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.MyDevices",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.MyDevices",
                "parameters": [
                    {
                        "name": "status",
                        "type": "status"
                    },
                    {
                        "name": "device",
                        "type": "device"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "Turn $status:status $device:device",
                        "Turn $device:device $status:status"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Turning $device $status"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.MyDevices",
                                    "params": {
                                        "status": "$status",
                                        "device": "$device"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.BlinkLight",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.BlinkLight",
                "parameters": [
                    {
                        "name": "number",
                        "type": "SchemaOrg_Number"
                    },
                    {
                        "name": "speed",
                        "type": "Speed"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "blink ($Speed:speed)? $SchemaOrg_Number:number times",
                        "blink $SchemaOrg_Number:number times ($Speed:speed)?"
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "Blinking ($Speed:speed)? $number times"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.BlinkLight",
                                    "params": {
                                        "speed": "$speed",
                                        "number": "$number"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "name": "com.example.actions.LEDColor",
            "availability": {
                "deviceClasses": [
                    {
                        "assistantSdkDevice": {}
                    }
                ]
            },
            "intent": {
                "name": "com.example.intents.LEDColor",
                "parameters": [
                    {
                        "name": "color",
                        "type": "SchemaOrg_Color"
                    },
                    {
                        "name": "device",
                        "type": "device"
                    }
                ],
                "trigger": {
                    "queryPatterns": [
                        "set $device:device on $SchemaOrg_Color:color"
                        
                    ]
                }
            },
            "fulfillment": {
                "staticFulfillment": {
                    "templatedResponse": {
                        "items": [
                            {
                                "simpleResponse": {
                                    "textToSpeech": "The color is $color"
                                }
                            },
                            {
                                "deviceExecution": {
                                    "command": "com.example.commands.LEDColor",
                                    "params": {
                                        "device": "$device",
                                        "color": "$color"
                                    }
                                }
                            }
                        ]
                    }
                }
            }  
        }
    ],
    "types": [
        {
            "name": "$Speed",
            "entities": [
                {
                    "key": "SLOWLY",
                    "synonyms": [
                        "slowly",
                        "slow"
                    ]
                },
                {
                    "key": "NORMALLY",
                    "synonyms": [
                        "normally",
                        "regular"
                    ]
                },
                {
                    "key": "QUICKLY",
                    "synonyms": [
                        "quickly",
                        "fast",
                        "quick"
                    ]
                }
            ]
        },
        {
            "name": "$device",
            "entities": [
                {
                    "key":"LED 1",
                    "synonyms": [
                        "led 1",
                        "device 1",
                        "light 1",
                        "led one",
                        "device one",
                        "light one"
                    ]
                },
                {
                    "key":"LED 2",
                    "synonyms": [
                        "led 2",
                        "device 2",
                        "light 2",
                        "led two",
                        "device two",
                        "light two"
                    ]
                },
                {
                    "key":"LED3",
                    "synonyms": [
                        "led 3",
                        "device 3",
                        "light 3",
                        "led three",
                        "device three" 
                    ]
                },
                {
                    "key":"ALL LEDS",
                    "synonyms": [
                        "all leds",
                        "all devices",
                        "all lights"
                    ]
                }
            ]
        },
        {
            "name": "$status",
            "entities": [
                {
                    "key":"ON",
                    "synonyms": [
                        "on",
                        "true"
                    ]
                },
                {
                    "key":"OFF",
                    "synonyms": [
                        "off",
                        "false"
                    ]
                }
                
            ]
        }
    ],
    "locale": "en"
}